<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/bt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="測試列表" />

    <Button
        android:id="@+id/dot_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="測試原點viewpager" />

    <Button
        android:id="@+id/bt_staggered_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="測試不規則列表" />

    <Button
        android:id="@+id/bt_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="測試tab" />

    <Button
        android:id="@+id/bt_drawerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="測試側邊欄" />

    <Button
        android:id="@+id/bt_loginView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登入" />

    <com.easyapp.lib.widget.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp" />


</LinearLayout>
