<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.easyapp.baseproject.lib.widgets.tabhost.FragmentClickTabHost xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <com.easyapp.baseproject.lib.widgets.EasyHorizontalScrollView
                    android:id="@+id/horiziontal_scrollview"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp" />
                </com.easyapp.baseproject.lib.widgets.EasyHorizontalScrollView>

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:minWidth="32dp"
                    android:src="@drawable/ic_arrow_right_gray"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </com.easyapp.baseproject.lib.widgets.tabhost.FragmentClickTabHost>

</FrameLayout>