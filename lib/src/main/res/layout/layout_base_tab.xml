<?xml version="1.0" encoding="utf-8"?>
<com.easyapp.lib.widget.tabhost.FragmentClickTabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/tab_host_height"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <include layout="@layout/layout_loading" />
            </FrameLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_host_height"
            android:layout_gravity="bottom"
            android:minHeight="@dimen/tab_host_height">

            <com.easyapp.lib.widget.EasyHorizontalScrollView
                android:id="@+id/horiziontal_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tab_host_height"
                android:layout_gravity="center_vertical"
                android:fillViewport="true"
                android:scrollbars="none">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tab_host_height"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/tab_host_height"
                    android:showDividers="none" />
            </com.easyapp.lib.widget.EasyHorizontalScrollView>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:minWidth="32dp"
                android:src="@drawable/ic_arrow_right_gray"
                android:visibility="gone" />
        </FrameLayout>

    </FrameLayout>


</com.easyapp.lib.widget.tabhost.FragmentClickTabHost>

